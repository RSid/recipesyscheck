<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe</title>
  <link rel="stylesheet" href="/recipe.css">
</head>
<body>

  <% @recipes.each do |recipe| %>
    <% if @id==recipe[0] %>
      <h1><%=recipe[1]%></h1>
      <h3>Ingredients</h3>
      <ol>
        <% @recipe_ingredients.each do |recipe_ingredient| %>
          <li><%= recipe_ingredient[1] %></li>
        <% end %>
      </ol>

      <h3>Directions</h3>
      <ul>
        <p>Instructions</p>
          <ol>
            <% @instructions.each do |step| %>
              <li><%=step%></li>
            <% end %>
          </ol>
        <p>Description</p>
        <li><%=recipe[3]%></li>
      </ul>
    <% end %>
  <% end %>




</body>
</html>
